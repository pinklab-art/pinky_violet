<?xml version='1.0' ?>
<launch>
    <set_env name="RCUTILS_LOGGING_BUFFERED_STREAM" value="1"/>

    <!-- Basic arguments -->
    <arg name="use_sim_time" default="False"/>
    <arg name="motor_ratio" default="1.0"/>
    
    <!-- Navigation arguments -->
    <arg name="namespace" default=""/>
    <arg name="map" default="$(find-pkg-share pink_monitor_pinky_bridge)/maps/map.yaml"/>
    <arg name="params_file" default="$(find-pkg-share pinky_navigation)/params/nav2_params.yaml"/>
    <arg name="params_cartographer" default="nav2_cartographer_params.lua"/>
    <arg name="autostart" default="True"/>
    <arg name="container_name" default="nav2_container"/>
    <arg name="use_composition" default="True"/>
    <arg name="use_respawn" default="False"/>
    <arg name="log_level" default="info"/>
    <arg name="lifecycle_nodes_local" default="['map_server']"/>
    <arg name="lifecycle_nodes_nav" default="['controller_server',
                       'smoother_server',
                       'planner_server',
                       'behavior_server',
                       'bt_navigator',
                       'waypoint_follower',
                       'velocity_smoother']"/>

    <!-- Basic robot setup -->
    <include file="$(find-pkg-share pinky_description)/launch/upload.launch.xml">
        <arg name="use_sim_time" value="$(var use_sim_time)"/>
    </include>

    <include file="$(find-pkg-share sllidar_ros2)/launch/sllidar_c1_launch.py">
    </include>

    <include file="$(find-pkg-share ros2_icm20948)/icm20948_node_launch.py">
    </include>

    <node pkg="pinky_bringup" exec="pinky_bringup">
        <param name="motor_ratio" value="$(var motor_ratio)"/>
    </node>

    <node pkg="pinky_bringup" exec="pinky_camera"></node>

    <node pkg="pinky_emotion" exec="pinky_emotion" name="pinky_emotion"></node>

    <!-- Navigation setup -->
    <group>
        <push-ros-namespace namespace="$(var namespace)"/>
        <node pkg="rclcpp_components" exec="component_container_isolated" name='$(var container_name)' output="screen" args="--ros-args --log-level $(var log_level)">
            <param from="$(var params_file)"/>
            <param name='map' value="$(var map)"/>
            <param name='autostart' value="$(var autostart)"/>
            <param name='use_sim_time' value="$(var use_sim_time)"/>
            
            <remap from="/tf" to="tf"/>
            <remap from="/tf_static" to="tf_static"/>
        </node>

        <include file="$(find-pkg-share pinky_cartographer)/launch/cartographer.launch.xml">
            <arg name="configuration_basename" value="$(var params_cartographer)"/>
            <arg name="use_nav2" value="True"/>
        </include>

        <include file="$(find-pkg-share pinky_navigation)/launch/localization_launch.xml">
            <arg name="params_file" value="$(var params_file)"/>
            <arg name="map" value="$(var map)"/>
            <arg name="use_sim_time" value="$(var use_sim_time)"/>
            <arg name="autostart" value="$(var autostart)"/>
            <arg name="use_composition" value="$(var use_composition)"/>
            <arg name="use_respawn" value="$(var use_respawn)"/>
            <arg name="container_name" value="$(var container_name)"/>
            <arg name='lifecycle_nodes' value="$(var lifecycle_nodes_local)"/>
        </include>

        <include file="$(find-pkg-share pinky_navigation)/launch/navigation_launch.xml">
            <arg name="params_file" value="$(var params_file)"/>
            <arg name="use_sim_time" value="$(var use_sim_time)"/>
            <arg name="autostart" value="$(var autostart)"/>
            <arg name="use_composition" value="$(var use_composition)"/>
            <arg name="use_respawn" value="$(var use_respawn)"/>
            <arg name="container_name" value="$(var container_name)"/>
            <arg name='lifecycle_nodes' value="$(var lifecycle_nodes_nav)"/>
        </include>
    </group>

</launch>
